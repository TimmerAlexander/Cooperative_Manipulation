<?xml version="1.0"?>
<launch>

  <arg name="ur_xyz" default="'0.0 0.0 0.0'"/>
  <arg name="ur_rpy" default="'0.0 0.0 0.0'"/>
  

  <arg name="limited" default="false" doc="If true, limits joint range [-PI, PI] on all joints." />
  <arg name="transmission_hw_interface" default="hardware_interface/PositionJointInterface" />

  <param unless="$(arg limited)" name="robot_description" command="$(find xacro)/xacro --inorder '$(find cooperative_manipulation)/custom_ur_description/custom_ur_urdf/custom_ur5_robot.urdf.xacro' xyz:=$(arg ur_xyz) rpy:=$(arg ur_rpy) transmission_hw_interface:=$(arg transmission_hw_interface)" />
  <param if="$(arg limited)" name="robot_description" command="$(find xacro)/xacro --inorder '$(find ur_description)/urdf/ur5_joint_limited_robot.urdf.xacro' transmission_hw_interface:=$(arg transmission_hw_interface)" />
</launch>
